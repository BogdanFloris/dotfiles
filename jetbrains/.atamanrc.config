bindings {
  "-" { actionId: ActivateProjectToolWindow, description: "Project (NERDTree-ish)" }
  0 { actionId: HideAllWindows, description: "Hide all tool windows" }
  "?" { actionId: RecentFiles, description: "Recent Files" }
  "/" { actionId: Find, description: "Find" }

  t {
    description: "Tool windows"
    bindings {
      r { actionId: ActivateRunToolWindow,   description: "Run tool window" }
      d { actionId: ActivateDebugToolWindow, description: "Debug tool window" }
      h { actionId: HideActiveWindow,        description: "Hide active tool window" }
      x { actionId: ActivateProblemsViewToolWindow, description: "Problems" }
    }
  }

  d {
    description: "Debugging"
    bindings {
      c { actionId: Resume, description: "Continue/Resume"}
      o { actionId: StepOver, description: "Step Over"}
      i { actionId: StepInto, description: "Step Into"}
      O { actionId: StepOut, description: "Step Out"}
      s { actionId: Stop, description: "Stop"}
    }
  }

  r { actionId: RenameElement, description: "Rename (Project view)" }
  n { actionId: NewElement,    description: "Newâ€¦ (file/dir popup)" }
  m { actionId: Move,          description: "Move (refactor)" }
  y { actionId: CopyReference, description: "Copy Reference (path/class)" }

  s {
    description: "Search"
    bindings {
      f { actionId: GotoFile,    description: "Go to file" }
      g { actionId: FindInPath,  description: "Find in path" }
    }
  }

  R { actionId: Run,   description: "Run" }
  D { actionId: Debug, description: "Debug" }
}

